<IfModule mod_rewrite.c>
  RewriteEngine On

  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^(.+) - [PT,L]
  RewriteRule ^(.*)$ /public/$1 
  RewriteRule ^(/.*)$ public/index.php [L]

</IfModule>